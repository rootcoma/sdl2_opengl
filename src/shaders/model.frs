#version 330

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

in vec4 pos;
varying vec3 normal;

out vec4 fragColor;

void main()
{
    vec3 lightpos = vec3(10.0f, -10.0f, -27.0f);
    float d = dot(normalize(lightpos), normalize(normal));
    if (d <= 0.0) {
        d = 0.4;
    }
    fragColor = vec4(pos.y, pos.x, pos.z*cos(d), 1.0);
}
